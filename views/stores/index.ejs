<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1>Shop Smart, Save Big!</h1>
             <p>
                  <% if( currentUser && currentUser.isAdmin){ %>
                <a class="btn btn-primary btn-lg" href="/stores/new">Add New store</a>
                <% } %>
             </p>
              <form action="/stores" method="GET" class="form-inline" id="store-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="store search..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>
     <div class="row text-center flex-wrap" id="store-grid">
        <% stores.forEach(function(store){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= store.image %>"> 
                   <div class="caption">
                       <h4><%= store.name %></h4>
                   </div>
                   <p>
                       <a href="/stores/<%= store._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
