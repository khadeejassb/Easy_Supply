<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a New store</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/stores" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" required>
                </div>
                <div class="form-group">
                    <label for="cost">Shipping cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Californiaâ€™s Sierra Nevada mountains.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/stores">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

