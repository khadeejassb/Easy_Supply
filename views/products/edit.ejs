<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit Product</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/stores/<%=store_id %>/products/<%=product._id %>?_method=PUT" method="POST">
                   <div class="form-group"> 
                    <label for="name">category</label>
                    <input class="form-control" type="text"value="<%=product.category%>" name="product[category]" placeholder="food,books..etc">
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text"value="<%=product.title %>" name="product[title]" id="name" placeholder="e.g coffee">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" value="<%=product.imagePath %>" name="product[imagePath]" id="image" required>
                </div>
                <div class="form-group">
                    <label for="price"> price</label>
                    <input class="form-control" type="number" value="<%=product.price %>" name="product[price]" id="cost" placeholder="9.99" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text"value="<%=product.description %>" name="product[description]" id="description" placeholder="food supplier.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/stores">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

