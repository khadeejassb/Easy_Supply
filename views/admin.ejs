<% include ./partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add New Contact</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/admin" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="contact[link]" placeholder="link">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="contact[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="contact[icon]" placeholder="icon">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/stores">Go Back</a>
        </div>
    </div>
<% include ./partials/footer %>

