<% include ./partials/header %>
 <div class="row">
        <h1 style="text-align: center">Add your Address</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/address" method="post">
  <div class="form-group">
                     <label>Address:</label>
                    <input class="form-control" type="text" name="address" value= "<%=user.address%>">
                </div>
                <div class="form-group">
                     <label>Address1:</label>
                    <input class="form-control" type="text" name="addr1" value= "<%=user.address.addr1%>">
                </div>
                <div class="form-group">
                     <label>Address 2:</label>
                    <input class="form-control" type="text" name="addr2" value= "<%=user.address.addr2%>">
                </div>
                <div class="form-group">
                     <label>City:</label>
                    <input class="form-control" type="text" name="city" value= "<%=user.address.city%>">
                </div>
                <div class="form-group">
                     <label>State:</label>
                    <input class="form-control" type="text" name="state" value= "<%=user.address.state%>">
                </div>
                <div class="form-group">
                     <label>country:</label>
                    <input class="form-control" type="text" name="country" value= "<%=user.address.country%>">
                </div>
                <div class="form-group">
                     <label>PostalCode:</label>
                    <input class="form-control" type="text" name="postalCode" value= "<%=user.address.postalCode%>">
                </div>
                 </div>
                <div class="form-group">
                  <p><strong>Cash on delivery is the only one payment method that we have for now</strong></p>
                </div>
                   <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Put your order!</button>
                </div>
            </form>
                
<% include ./partials/footer %>